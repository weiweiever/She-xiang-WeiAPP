<!--pages/photographer_detail/detail.wxml-->
<view class='page'>
  <text class='title'>详 情</text>

    <image src="{{info.avatarurl}}" class="photo"></image>
    <view wx:if="{{!press}}" class='intro-text'>
      <view class='item'>
        <text class='item-title' style='margin-right:40rpx;margin-left:30rpx;'>姓 名:</text>
        <text class="introduction">{{info.trueName}}</text>
      </view>
      <view class='item'>
        <text class='item-title' style='margin-right:40rpx;margin-left:30rpx;'>风 格:</text>
        <text class="introduction">{{info.type}}</text>
      </view>
      <view class='item'>
        <text class='item-title' style='margin-right:40rpx;margin-left:30rpx;'>区 域:</text>
        <text class="introduction">{{info.region}}</text>
      </view>
      <view class='item'>
        <text class="self">  “{{info.intro}}”</text>
      </view>
    </view>

  
  



  <view class='wall'>
    <text>照片展示</text>
    <view>
    <image class='img' bindtap='img' data-idx='1' src="{{img1}}"></image>
    <image class='img' bindtap='img' data-idx='2' src="{{img2}}"></image>
    </view>
    <view>
    <image class='img' bindtap='img' data-idx='3' src="{{img3}}"></image>
    <image class='img' bindtap='img' data-idx='4' src="{{img4}}"></image>
    </view>
    <view>
    <image class='img' bindtap='img' data-idx='5' src="{{img5}}"></image>
    <image class='img' bindtap='img' data-idx='6' src="{{img6}}"></image>
    </view>
  </view>
</view>
