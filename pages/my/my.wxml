<!--pages/my/my.wxml-->

<view class="container">
    <!-- 用户信息 -->
    <view class="userinfo">
        <image
            class="userinfo-avatar"
            src="{{userInfo.avatarUrl}}"
            background-size="cover"
        ></image>
        <view>
            <text class="userinfo-nickname">{{userInfo.nickName}}</text>
        </view>
    </view>


    <!-- 预约记录 -->
    <view class="record">
        <view class="record-text">
            <text style='color: #005070;'>我的预约记录</text>
        </view>
    </view>

    <!-- 上传图片测试 -->
    <view class="uploader">
        <view class="uploader-text">
            <text style='color: #005070;'>上传图片</text>
        </view>
        <view class="uploader-container" wx:if="{{imgUrl}}">
            <image
                class="uploader-image"
                src="{{imgUrl}}"
                mode="aspectFit"
                bindtap="previewImg"
            ></image>
        </view>
    </view>

</view>
